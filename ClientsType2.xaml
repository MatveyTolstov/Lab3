<Window x:Class="Lab1Kokoro.ClientsType2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab1Kokoro"
        mc:Ignorable="d"
        Title="ClientsType2" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"></RowDefinition>
            <RowDefinition Height="0.2*"></RowDefinition>
            <RowDefinition Height="0.5*"></RowDefinition>
            <RowDefinition Height="0.5*"></RowDefinition>
            <RowDefinition Height="0.5*"></RowDefinition>
        </Grid.RowDefinitions>
        <DataGrid x:Name="ClientData"  Grid.Row="0"></DataGrid>
        <TextBox x:Name="Client_Box" AutomationProperties.HelpText="Имена Клиентов" Grid.Row="1"></TextBox>
        <Button x:Name="Button_Create" Content="Добавить" Grid.Row="2" Click="Button_Create_Click"></Button>
        <Button x:Name="Button_Update" Content="Изменить" Grid.Row="3" Click="Button_Update_Click"></Button>
        <Button x:Name="Button_Delete" Content="Удалить" Grid.Row="4" Click="Button_Delete_Click"></Button>
    </Grid>
</Window>
